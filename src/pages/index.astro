---
import Layout from '../layouts/Layout.astro';
import { siteConfig } from '../config/siteconfig';
import LogoDisplay from '../components/LogoDisplay.astro';
import AppleHelloEffect from '../components/ui/AppleHelloEffect';
import SparklesText from '../components/ui/SparklesText';
import TestimonialsCarousel from '../components/ui/TestimonialsCarousel';
import CompanyMarquee from '../components/ui/CompanyMarquee';
import ScrollStepIndicator from '../components/ui/ScrollStepIndicator';

const { sections, hostLogo } = siteConfig;

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<Layout>
	<main class="relative">
		<section id="home" class="snap-start min-h-screen flex items-center justify-center">
			<div class="container mx-auto px-4 py-12 md:py-16">
				<div class="max-w-4xl mx-auto text-center">
					<SparklesText client:load text="Hello Hyderabad" />
					
					<p class="mt-6 md:mt-8 text-xl text-gray-600">
						{sections.hello}
					</p>

					<div class="mt-8 md:mt-12 flex flex-col sm:flex-row items-center justify-center gap-4">
						<a
							href="#situation-today"
							class="inline-flex items-center justify-center px-6 py-3 md:px-8 md:py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 md:text-lg w-full sm:w-auto"
						>
							{sections.homeCta}
						</a>
						<a
							href="#book-now"
							class="inline-flex items-center justify-center px-6 py-3 md:px-8 md:py-3 border border-transparent text-base font-medium rounded-md text-blue-700 bg-blue-100 hover:bg-blue-200 md:text-lg w-full sm:w-auto"
						>
							Book Now
						</a>
					</div>
				</div>
			</div>
		</section>

		<section id="situation-today" class="snap-start min-h-screen flex items-center justify-center">
			<div class="container mx-auto px-4 py-12 md:py-16">
				<div class="max-w-4xl mx-auto text-center">
					
					
					<div class="mb-8">
						<img 
							src="/images/ChallengeToday.png" 
							alt="Challenge Today Diagram" 
							class="mx-auto max-w-full h-auto"
						/>
					</div>

					<div class="mt-8 md:mt-12">
						<a
							href="#building-with-ai"
							class="inline-flex items-center justify-center px-6 py-3 md:px-8 md:py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 md:text-lg"
						>
							The AI Unlock
						</a>
					</div>
				</div>
			</div>
		</section>

		<section id="building-with-ai" class="snap-start min-h-screen flex items-center justify-center bg-gray-50">
			<div class="container mx-auto px-4 py-12 md:py-16">
				<div class="max-w-4xl mx-auto text-center">
					
					
					<div class="mb-8">
						<img 
							src="/images/AI Possibility.png" 
							alt="AI Possibilities Diagram" 
							class="mx-auto max-w-full h-auto"
						/>
					</div>

					<div class="mt-8 md:mt-12">
						<a
							href="#intent"
							class="inline-flex items-center justify-center px-6 py-3 md:px-8 md:py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 md:text-lg"
						>
							Workshop OKRs
						</a>
					</div>
				</div>
			</div>
		</section>

		<section id="intent" class="snap-start min-h-screen flex items-center justify-center bg-gray-50 pt-16 md:pt-24">
			<div class="container mx-auto px-4 py-12 md:py-16">
				<div class="max-w-4xl mx-auto">
					<h1 class="text-3xl md:text-4xl font-bold mb-6 md:mb-8">{sections.intentTitle}</h1>
					
					<div class="prose prose-lg max-w-none">
						<p class="text-sm md:text-lg text-gray-600 mb-4 md:mb-8">
							{sections.intent}
						</p>

						<div class="bg-white rounded-lg p-4 md:p-8 mt-6 md:mt-12">
							<h2 class="text-lg md:text-2xl font-semibold mb-3 md:mb-4">{sections.keyObjectivesTitle}</h2>
							<ul class="space-y-3 md:space-y-4">
								{sections.objectives.map((objective) => (
									<li class="flex items-start">
										<svg class="h-5 w-5 md:h-6 md:w-6 text-green-500 mr-2 md:mr-3 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
										</svg>
										<span class="text-sm md:text-base">{objective}</span>
									</li>
								))}
							</ul>
						</div>

						<div class="mt-8 md:mt-12 text-center">
							<a
								href="#structure"
								class="inline-flex items-center justify-center px-6 py-3 md:px-8 md:py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 md:text-lg"
							>
								{sections.keyObjectivesCta}
							</a>
						</div>
					</div>
				</div>
			</div>
		</section>

		<section id="structure" class="snap-start min-h-screen flex items-center justify-center pt-16 md:pt-24">
			<div class="container mx-auto px-4 py-12 md:py-16">
				<div class="max-w-4xl mx-auto">
					<h1 class="text-3xl md:text-4xl font-bold mb-6 md:mb-8 text-center">{sections.structureTitle}</h1>

					<div class="flex flex-wrap justify-center gap-6 md:gap-8">
						{sections.structure.map((day) => (
							<div class="bg-white rounded-lg shadow-sm border p-4 md:p-6 text-center">
								<h2 class="text-xl md:text-2xl font-semibold mb-3 md:mb-4">{day.day}</h2>
								<ul class="space-y-3 inline-block text-left">
									{day.activities.map((activity) => (
										<li class="flex items-start">
											<svg
												class="h-5 w-5 md:h-6 md:w-6 text-blue-500 mr-2 md:mr-3 flex-shrink-0"
												fill="none"
												viewBox="0 0 24 24"
												stroke="currentColor"
											>
												<path
													stroke-linecap="round"
													stroke-linejoin="round"
													stroke-width="2"
													d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
												/>
											</svg>
											<span class="text-gray-700">{activity}</span>
										</li>
									))}
								</ul>
							</div>
						))}
					</div>

					<div class="mt-8 md:mt-12 text-center">
						<a
							href="#why-us"
							class="inline-flex items-center justify-center px-6 py-3 md:px-8 md:py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 md:text-lg"
						>
							{sections.structureCta}
						</a>
					</div>
				</div>
			</div>
		</section>

		<section id="why-us" class="snap-start min-h-screen flex items-center justify-center bg-gray-50 pt-16 md:pt-24">
			<div class="container mx-auto px-4 py-12 md:py-16">
				<div class="max-w-4xl mx-auto">
					<h1 class="text-3xl md:text-4xl font-bold mb-8 md:mb-12 text-center">{sections.whyUsTitle}</h1>

					<div class="grid gap-6 md:gap-8 md:grid-cols-3">
						{sections.whyUsMetrics.map((metric) => (
							<div class="bg-white rounded-lg p-4 md:p-6 shadow-sm text-center">
								<div class="mx-auto w-10 h-10 md:w-12 md:h-12 mb-3 md:mb-4 text-blue-600" set:html={metric.icon} />
								<h3 class="text-lg md:text-lg font-semibold mb-2 md:mb-3">{metric.title}</h3>
								<p class="text-gray-600 text-sm md:text-base">{metric.description}</p>
							</div>
						))}
					</div>
					<div class="mt-8 md:mt-12 text-center">
						<a
							href="#participants"
							class="inline-flex items-center justify-center px-6 py-3 md:px-8 md:py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 md:text-lg"
						>
							Testimonials
						</a>
					</div>
				</div>
			</div>
		</section>

		<section id="participants" class="snap-start min-h-screen flex flex-col items-center justify-center bg-gray-50 pt-16 md:pt-24">
			<div class="container mx-auto px-4 py-12 md:py-16">
				<div class="max-w-4xl mx-auto">
					<h1 class="text-3xl md:text-4xl font-bold mb-8 md:mb-12 text-center">{sections.participantsTitle}</h1>
					<TestimonialsCarousel client:load verbatims={sections.participants} />
					<div class="mt-12 md:mt-16">
						<h2 class="text-lg md:text-xl font-semibold mb-3 md:mb-4 text-center">Attended by Employees from</h2>
						<CompanyMarquee client:load companies={sections.attendeeCompanies} />
					</div>
					<div class="mt-8 md:mt-12 text-center">
						<a
							href="#hosts"
							class="inline-flex items-center justify-center px-6 py-3 md:px-8 md:py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 md:text-lg"
						>
							Your Hosts
						</a>
					</div>
				</div>
			</div>
		</section>

		<section id="hosts" class="snap-start min-h-screen flex items-center justify-center pt-16 md:pt-24">
			<div class="container mx-auto px-4 py-12 md:py-16">
				<div class="max-w-4xl mx-auto">
					<h1 class="text-3xl md:text-4xl font-bold mb-8 md:mb-12 text-center">{sections.hostsTitle}</h1>

					<div class="grid gap-6 md:gap-8 md:grid-cols-2">
						{sections.hosts.map((host) => (
							<div class="bg-white rounded-lg p-4 md:p-6 shadow-sm text-center">
								<div class="w-16 h-16 md:w-24 md:h-24 mx-auto mb-3 md:mb-4 rounded-full bg-gray-200 overflow-hidden">
									<img
										src={host.image}
										alt={host.name}
										class="w-full h-full object-cover"
									/>
								</div>
								<h3 class="text-lg md:text-xl font-semibold mb-2 md:mb-3">{host.name}</h3>
								<p class="text-gray-600 mb-2 md:mb-3 text-sm md:text-base">{host.role}</p>
								<p class="text-gray-600 text-sm md:text-base">{host.bio}</p>
							</div>
						))}
					</div>
				</div>
			</div>
		</section>

		<section id="book-now" class="snap-start min-h-screen flex items-center justify-center bg-gray-50 pt-16 md:pt-24">
			<div class="container mx-auto px-4 py-12 md:py-16">
				<div class="max-w-4xl mx-auto text-center">
					<h1 class="text-3xl md:text-4xl font-bold mb-8 md:mb-12 text-center">{sections.bookNowTitle}</h1>
					<div class="flex flex-wrap justify-center gap-6 md:gap-8">
						{sections.bookNowCards.map((card) => (
							<div class="bg-white rounded-lg shadow-sm border p-6 md:p-8 text-center w-full max-w-sm">
								<h2 class="text-xl md:text-2xl font-semibold mb-3 md:mb-4">{card.date}</h2>
								<p class="text-gray-600 mb-2">Time: {card.time}</p>
								<p class="text-gray-600 mb-6">Location: {card.location}</p>
								<a
									href={card.url}
									target="_blank"
									rel="noopener noreferrer"
									class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 md:text-lg w-full"
								>
									Book Now
								</a>
							</div>
						))}
					</div>
				</div>
			</div>
		</section>
	</main>
	<ScrollStepIndicator client:load />
</Layout>
